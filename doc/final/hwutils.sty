% Set (content)
% Creates set in the form {content}.
\newcommand{\set}[1]{\left\{{#1}\right\}}

% Set (content)
% Creates set in the form (content).
\newcommand{\group}[1]{\left({#1}\right)}

% Set Such That (content, condition)
% Creates set in the form {content | condition}.
\newcommand{\setst}[2]{\set{{#1} \mid {#2}}}

% Probability (content)
% Creates probability in the format Pr[content]
\newcommand{\pr}[1]{\ensuremath{\text{Pr}\left({#1}\right)}}

% Conditional probability (content, condition)
% Creates probability in the format Pr[content | condition]
\newcommand{\cpr}[2]{\ensuremath{\text{Pr}\left[{#1} \middle\vert {#2}\right]}}

% Expectation (content)
% Creates expectation in the format E[content]
\newcommand{\ex}[1]{E\left({#1}\right)}

% Variance (content)
% Creates variance in the format Var[content]
\newcommand{\var}[1]{\text{Var}\left({#1}\right)}

